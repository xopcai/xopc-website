      <form id="joinForm" class="space-y-3">
        <input type="email" id="emailInput" placeholder="输入你的邮箱" required class="w-full px-4 py-3 bg-[var(--bg-tertiary)] border border-[var(--border-color)] rounded-lg text-[var(--text-primary)] placeholder-slate-500 text-sm" style="outline: none;">
        <button type="submit" id="submitBtn" class="w-full px-6 py-3 rounded-lg text-sm font-medium text-[var(--text-primary)]" style="background: linear-gradient(135deg, #0ea5e9, #06b6d4);">加入等待列表</button>
        <p id="formStatus" class="text-sm"></p>
      </form>
      <script>
      async function handleJoin(event) {
        event.preventDefault();
        const email = document.getElementById('emailInput').value;
        const btn = document.getElementById('submitBtn');
        const status = document.getElementById('formStatus');
        
        btn.disabled = true;
        btn.textContent = '提交中...';
        
        try {
          const response = await fetch('/api/join', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
          });
          
          if (response.ok) {
            status.textContent = '✅ 感谢加入！我们会发送最新动态到你的邮箱。';
            status.className = 'text-sm text-green-400';
            document.getElementById('joinForm').reset();
          } else {
            status.textContent = '❌ 提交失败，请重试。';
            status.className = 'text-sm text-red-400';
          }
        } catch (e) {
          status.textContent = '❌ 网络错误，请重试。';
          status.className = 'text-sm text-red-400';
        }
        
        btn.disabled = false;
        btn.textContent = '加入等待列表';
      }
      
      document.getElementById('joinForm').addEventListener('submit', handleJoin);
      </script>
